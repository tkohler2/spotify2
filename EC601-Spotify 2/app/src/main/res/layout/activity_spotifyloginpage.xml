<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/activity_vertical_margin">

    <RelativeLayout
        android:layout_width="match_parent" android:layout_height="130dp">
        <Spinner
            android:id="@+id/playlist_name1"
            android:layout_width="250dp"
            android:layout_height="65dp"
            android:background="@color/common_google_signin_btn_text_dark_disabled"
            android:elevation="22dp"
            android:gravity="center"/>
        <ImageView
            android:gravity="center"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_alignTop="@+id/playlist_name1"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:background="@drawable/fist_hand_emoji"
            android:id="@+id/fist_hand_emoji" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent" android:layout_height="130dp">
        <Spinner
            android:id="@+id/playlist_name2"
            android:layout_width="250dp"
            android:layout_height="65dp"
            android:background="@color/common_google_signin_btn_text_dark_disabled"
            android:elevation="22dp"
            android:gravity="center"/>
        <ImageView
            android:gravity="center"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_alignTop="@+id/playlist_name2"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:background="@drawable/peace_emoji"
            android:id="@+id/peace_emoji" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent" android:layout_height="130dp">

        <ImageView
            android:gravity="center"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_alignTop="@+id/playlist_name3"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:background="@drawable/raised_hand"
            android:id="@+id/raised_hand" />

        <Spinner
            android:id="@+id/playlist_name3"
            android:layout_width="250dp"
            android:layout_height="65dp"
            android:background="@color/common_google_signin_btn_text_dark_disabled"
            android:elevation="22dp"
            android:gravity="center"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent" android:layout_height="100dp">
        <ImageButton
            android:id="@+id/camera"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="5dp"
            android:layout_centerInParent="true"
            android:background="@drawable/camera" />
    </RelativeLayout>
</LinearLayout>
